# 精简版Web界面配置 - 确保不超过16MB

# ============ 基础配置（保持不变）============
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_PARTSIZE=16
CONFIG_TARGET_IMAGES_GZIP=y

# 内核模块
CONFIG_PACKAGE_kmod-mt7603=y
CONFIG_PACKAGE_kmod-mt7615e=y
CONFIG_PACKAGE_kmod-mt7621=y

# 核心系统包
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y
CONFIG_PACKAGE_kmod-gpio-button-hotplug=y
CONFIG_PACKAGE_kmod-ipt-offload=y
CONFIG_PACKAGE_libc=y
CONFIG_PACKAGE_libgcc=y
CONFIG_PACKAGE_libustream-openssl=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_mtd=y
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_swconfig=y
CONFIG_PACKAGE_uboot-envtools=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_uclient-fetch=y
CONFIG_PACKAGE_urandom-seed=y
CONFIG_PACKAGE_wireless-regdb=y
CONFIG_PACKAGE_wpad-basic=y
CONFIG_PACKAGE_default-settings=y

# ============ 精简版Web界面 ============
# Luci核心（最小化）
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
# CONFIG_PACKAGE_luci-ssl=y  # 禁用SSL以节省空间
CONFIG_PACKAGE_luci-theme-bootstrap=y

# 仅保留最必要的Luci应用
CONFIG_PACKAGE_luci-app-firewall=y
# CONFIG_PACKAGE_luci-app-opkg=y  # 可禁用，通过SSH管理软件包

# ============ 基本工具（最小化） ============
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_curl=y
# CONFIG_PACKAGE_wget=y  # 与curl功能重叠，可选

# 网络工具
CONFIG_PACKAGE_ping=y
CONFIG_PACKAGE_traceroute=y

# ============ 明确排除以节省空间 ============
# 禁用所有非核心Luci应用
# CONFIG_PACKAGE_luci-app-commands is not set
# CONFIG_PACKAGE_luci-app-filetransfer is not set
# CONFIG_PACKAGE_luci-app-system is not set

# 禁用大型工具
# CONFIG_PACKAGE_bash is not set
# CONFIG_PACKAGE_htop is not set
# CONFIG_PACKAGE_vim is not set

# 禁用不必要的服务
# CONFIG_PACKAGE_openssh-sftp-server is not set
# CONFIG_PACKAGE_ntpd is not set
